<% if @task.new_record? %>
$('.field-add-task-<%= @task_list.id %>').effect('highlight', {color: 'red'});
$('#date_id_<%= @task_list.id %>').val("");
<% else %>
$('ul#<%= "task_ul_id_#{@task_list.id}" %>.task-list').append("<%= escape_javascript(render 'users/task', task: @task) %>");
$('.field-add-task-<%= @task_list.id %>').val("");
$('#date_id_<%= @task_list.id %>').val("");
$(".best_in_place").best_in_place();
<% end %>



