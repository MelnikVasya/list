<% if @deadline.new_record? %>
$('input#deadline_field_<%= @task_id %>').effect('highlight', {color: 'red'});
<% else %>
$('li#task_li_id_<%= @task_id %>').children('p').prepend("<%= escape_javascript(render 'users/deadline_label', task: @task_id) %>");
$('ul#deadline_btn_<%= @task_id %>').html("<%= escape_javascript(render 'users/deadline_edit_btn', task: @task_id) %>");
$('ul#deadline_btn_<%= @task_id %>').parents('div.dropdown.open').removeClass('open');
$('ul#deadline_btn_<%= @task_id %>').parents('div.edit-task-group').removeClass('show-edit-task-group-off show-edit-group');
$(".best_in_place").best_in_place();
<% end %>
